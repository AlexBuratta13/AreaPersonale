<Window x:Class="WPF_InserimentoPersonale.MostraFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_InserimentoPersonale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MostraFile">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="250"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Personale Aziendale" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="Red" FontSize="18"  ></Label>

        <StackPanel Grid.Row="1">
            <ListBox Width="700" Height="250"></ListBox>
        </StackPanel>

        <Button Content="Nuovo Inserimento" Grid.Row="2" Width="120" Height="20" VerticalAlignment="Bottom"></Button>
        <Button Content="Esci" Grid.Row="3" Width="120" Height="20" VerticalAlignment="Center"></Button>
    </Grid>
</Window>
